<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.mydompetku">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDompetku">
        <activity
            android:name=".edit.EditCashflowActivity"
            android:theme="@style/Theme.MyDompetku.NoAction" />
        <activity
            android:name=".detail.cashflow.DetailCashflowActivity"
            android:label="@string/title_activity_detail_cashflow"
            android:theme="@style/Theme.MyDompetku.NoActionBar" />
        <activity
            android:name=".category.CategoryActivity"
            android:theme="@style/Theme.MyDompetku.NoAction" />
        <activity
            android:name=".add.AddNoteActivity"
            android:theme="@style/Theme.MyDompetku.NoAction" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.MyDompetku.NoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>